<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicIsTrivial" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/free_sans</item>
        <item name="android:background">@color/alice_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>
    <style name="title_bold">
        <item name="android:fontFamily">@font/free_sans_bold</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="subtitle">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="song_normal">
        <item name="android:textSize">25dp</item>
    </style>
    <style name="song_bold">
        <item name="android:fontFamily">@font/free_sans_bold</item>
        <item name="android:textSize">25dp</item>
    </style>
    <style name="button_text">
        <item name="android:fontFamily">@font/free_sans_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Theme.MusicIsTrivial.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="postSplashScreenTheme">@style/Theme.MusicIsTrivial</item>
        <item name="windowSplashScreenBackground">@color/alice_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/appicon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!--   button colour -->
        <item name="android:colorAccent">@color/white</item>
        <!--   text colour     -->
        <item name="android:textColorPrimary">@color/white</item>
        <!--   title colour -->
        <item name="android:textColor">@color/white</item>

        <item name="android:background">@color/light_purple</item>
    </style>
</resources>